<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="20"
                         Spacing="20">

        <Label Text="Sobre o Aplicativo"
               FontFamily="Inter_18pt-Light"
               FontSize="36"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Frame Padding="20"
               BackgroundColor="White"
               CornerRadius="15"
               HasShadow="True">

            <VerticalStackLayout Spacing="10">

                <Label Text="Nome do Desenvolvedor:"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="Black" />

                <Label Text="Yan Costa Araujo"
                       FontSize="16"
                       TextColor="Black" />

                <Label Text="Ano de Desenvolvimento:"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="Black" />

                <Label Text="2025"
                       FontSize="16"
                       TextColor="Black" />

                <Label Text="Projeto criado com .NET MAUI"
                       FontSize="14"
                       TextColor="Gray"
                       HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>

</ContentPage>
